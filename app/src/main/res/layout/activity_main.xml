<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/txtLabel1" android:layout_marginTop="88dp"
            app:layout_constraintHorizontal_bias="0.092"/>
    <Button
            android:text="Click me!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/mainButton"
            app:layout_constraintStart_toStartOf="@+id/txtLabel1"
            android:layout_marginBottom="9dp" app:layout_constraintBottom_toTopOf="@+id/txtLabel1"/>

</androidx.constraintlayout.widget.ConstraintLayout>